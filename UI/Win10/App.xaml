<Application
    x:Class="HogaTron.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Win10"
    RequestedTheme="Light">

    <Application.Resources>
        <Style TargetType="Image" x:Key="WhiteLogoStyle">
            <Setter Property="Source" Value="Assets/white-logo.png" />
            <Setter Property="Width" Value="150" />
            <Setter Property="Margin" Value="20,20,20,0" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
        <Style TargetType="TextBlock" x:Key="LabelTextBlockStyle">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,10,20,0" />
        </Style>
    </Application.Resources>
</Application>
